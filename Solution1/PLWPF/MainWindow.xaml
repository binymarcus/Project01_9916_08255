<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Button x:Name="GuestRequestButton" Content ="Guest Request" Margin="10" FontSize="30" Grid.Row="0" Click="guestRequestButton_Click"/>
        <Button x:Name="HostingUnitButton" Content ="Hosting Unit" Margin="10" FontSize="30" Grid.Row="1" Click="hostingUnitButton_Click"/>
        <Button x:Name="OrderButton" Content ="Order" Margin="10" FontSize="30" Grid.Row="2" Click="orderButton_Click"/>

    </Grid>
</Window>
