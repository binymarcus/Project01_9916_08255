<Window x:Class="PLWPF.AddHostingUnit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostingUnit" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="104.667"/>
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddUnitButton" Content ="Add Unit" Click="AddButton_Click" Margin="10,10,10.333,10" FontSize="30" Grid.Row="0" />
        <Button x:Name="UpdateUnitButton" Content ="Update Unit" Click="UpdateButton_Click" Margin="10,10,10.333,9.667" FontSize="30" Grid.Row="1"/>
        <Button x:Name="DeleteUnitButton" Content ="Delete Unit" Margin="10,10.333,10.333,9.667" FontSize="30" Grid.Row="2"/>
        <Button  x:Name="BackButton" Click="backButton_Click" Content="Back" HorizontalAlignment="Left" FontSize="30" Margin="10,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="773" Height="85"/>
    </Grid>
</Window>
